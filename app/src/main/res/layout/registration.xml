<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/textView"
        android:layout_width="234dp"
        android:layout_height="73dp"
        android:layout_x="87dp"
        android:layout_y="60dp"
        android:text="Registration"
        android:textSize="40dp" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_x="29dp"
        android:layout_y="178dp"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_x="29dp"
        android:layout_y="238dp"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_x="29dp"
        android:layout_y="447dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_x="31dp"
        android:layout_y="510dp"
        android:ems="10"
        android:hint="Retype Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_x="29dp"
        android:layout_y="303dp"
        android:ems="10"
        android:hint="Birth Place"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_x="30dp"
        android:layout_y="372dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Username" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="278dp"
        android:layout_y="589dp"
        android:text="Clear"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="159dp"
        android:layout_y="588dp"
        android:text="Submit"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/showText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="37dp"
        android:layout_y="679dp"
        />
</AbsoluteLayout>